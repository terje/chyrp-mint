{% extends "layout.twig" %}

{% block title %}${ "Mint Settings" | translate("mint") }{% endblock %}

{% block content %}
  <h1>${ "Mint Settings" | translate("mint") }</h1>
  <form id="mint_settings" class="split" action="{% admin "mint_settings" %}" method="post">
    <fieldset>
      <p>
        <label for="mint_path">${ "Mint Path" | translate("mint") }</label>
        <input class="text" type="text" name="mint_path" value="${ site.mint_path | escape }" id="mint_path" /><small>${ "The folder, relative to your Chyrp install, where Mint is installed. You can use /../ to go up one folder." | translate("mint") }</small>
      </p>

      <p>
        <label for="enable_birdfeeder">${ "Enable Bird Feeder" | translate("mint") | format("<input class=\"text\" type=\"text\" name=\"enable_birdfeeder\" value=\"" ~ site.enable_birdfeeder | escape ~ "\" size=\"2\" id=\"enable_birdfeeder\" />") }</label>
        <input type="checkbox" class="checkbox" name="enable_birdfeeder"${ site.enable_birdfeeder | checked } /> ${ "enabled" | translate("mint") }
      </p>

      <p>
        <label for="mint_feed_title">${ "Feed title" | translate("mint") }</label>
        <input class="text" type="text" name="mint_feed_title" value="${ site.mint_feed_title | escape }" id="mint_feed_title" /> <span class="sub">${ "(the title that will be shown in Mint)" | translate("mint") }</span>
      </p>

      <p class="buttons">
        <p>
          <button type="submit" class="yay"><img src="themes/default/images/icons/success.png" alt="success" />${ "Update" | translate }</button>
        </p>
      </p>

      <input type="hidden" name="hash" value="$site.secure_hashkey" id="hash" />
    </fieldset>
{% endblock %}
